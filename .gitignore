*.tsbuildinfo

# IDE and Editor files
.vscode/
.idea/
*.swp
*.swo
*~
.DS_Store
*.sublime-project
*.sublime-workspace

# OS files
Thumbs.db
Desktop.ini
.DS_Store
.AppleDouble
.LSOverride

# Temporary files
tmp/
temp/
*.tmp

# MongoDB data (if running locally)
data/
mongo-data/

# Docker volumes
docker-data/

